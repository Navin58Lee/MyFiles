package FinalDiscountedPrice;
public class Solution {
	static void finalPrice(int [] prices)
	{
		int len = prices.length;
		int temp = 0;
		int sum = 0;
		int min = 0;
		for(int i=0;i<len;i++)
		{
			min = prices[i+1];
			for(int j=i+2;j<len;j++)
			{
				if(prices[j]<min)
				{
					min = prices[j];
				}
			}
			if(prices[i]>min)
			{
				sum = sum+(prices[i]-min);
			}
			if(prices[i] == min)
			{
				sum = sum+0;
			}
			if(prices[i]<min)
			{
				sum = sum+prices[i];
			}
		}
		System.out.println(sum);
	}
}
