package FindTheWinner;

public class Solution {
	 static String winner(int[] andrea, int[] maria, String s) {
        int alen = andrea.length;
        int mlen = maria.length;
        int asum = 0;
        int msum = 0;
        String result = "";
        int [] ares = new int[alen];
        int [] mres = new int[mlen];
        if(s == "Even")
        {
        	int x = 0;
        	for(int i=0;i<alen;i=i+2)
        	{
        		ares[x] = andrea[i] - maria[i];
        		mres[x] = maria[i] - ares[i];
        		x++;
        	}
        	for(int i=0;i<x;i++)
        	{
        		asum = asum+ares[i];
        	    msum = msum+mres[i];
        	}
        	if(asum>msum)
        	{
        		result = "Andrea";
        	}
        	else
        	{
        		result = "Maria";
        	}
        	return result;
        }
        else
        {
        	int y=0;
        	for(int i=1;i<alen;i=i+2)
        	{
        		ares[y] = andrea[i] - maria[i];
        		mres[y] = maria[i] - ares[i];
        		y++;
        	}
        	for(int i=0;i<y;i++)
        	{
        		asum = asum+ares[i];
        	    msum = msum+mres[i];
        	}
        	if(asum>msum)
        	{
        		result = "Andrea";
        	}
        	else
        	{
        		result = "Maria";
        	}
        	return result;
        }
	    }

}
