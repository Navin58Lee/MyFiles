package MinimumAmount;

public class Solution {
    static long calculateAmount(int[] prices) {
      int n = prices.length;
      int d [] = new int[n];
      int min = prices[0];
      d[0] = prices[0];
      d[1] = prices[1] - prices[0];
      for(int i=2;i<n;i++)
      {
    	  for(int j=i;j>0;j--)
    	  {
    		  if(prices[j]<prices[j-1])
    		  {
    			  int temp = prices[j];
    			  prices[j] = prices[j-1];
    			  prices[j-1] = temp;
    		  }
    	  }
    	  min = prices[0];
    	  if(d[i]<min)
    	  {
    		  d[i] = 0;
    	  }
    	  if(d[i]>min)
    	  {
    		  d[i] = d[i]-min;
    	  } 
      }
      int sum = 0;
      for(int i=0;i<n;i++)
      {
    	  sum = sum+d[i];
      }
      return sum;
      }
}
