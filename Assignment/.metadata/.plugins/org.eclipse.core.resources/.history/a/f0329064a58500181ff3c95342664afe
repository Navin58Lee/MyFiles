package CountingPairs;

public class Solution {
	 static int countPairs(int[] numbers, int k) {
		 int l = numbers.length;
		 int count = 0;
		 for(int i=0;i<l-1;i++)
		 {
			 for(int j=i+1;j<l;j++)
			 {
				 if(numbers[i]+k == numbers[j])
				 {
					 count = count+1;
				 }
			 }
		 }
		 return count;
	    } 
}
