package CountingPairs;

public class Solution {
	 static int countPairs(int[] numbers, int k) {
		 int l = numbers.length;
		 for(int i=0;i<l;i++)
		 {
			 for(int j=i+1;j<l;j++)
			 {
				 if(numbers[i]==numbers[j])
				 {
					 numbers[j] = numbers[l-1];
					 l--;
					 j--;
				 }
			 }
		 }
		 int t [] = new int[l];
		 for(int i=0;i<l;i++)
		 {
			 t[i] = numbers[i];
		 }
		 int count = 0;
		 for(int i=0;i<l-1;i++)
		 {
			 for(int j=i+1;j<l;j++)
			 {
				 if(numbers[i]+k == numbers[j])
				 { 
					 count = count+1;
				 }
			 }
		 }
		 return count;
	    }
}
