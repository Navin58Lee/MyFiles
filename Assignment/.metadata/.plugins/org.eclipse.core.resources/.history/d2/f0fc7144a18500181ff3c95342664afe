package CountingPairs;

public class Solution {
	 static int countPairs(int[] numbers, int k) {
		 int l = numbers.length;
		 int t [] = new int[l];
		 int j = 0;
		 for(int i=0;i<l;i++)
		 {
			 if(numbers[i]!=numbers[i+1])
			 {
				 t[j++] = numbers[i];
			 }
		 }
		 t[j++] = numbers[l-1];
		 for(int i=0;i<j;i++)
		 {
			 numbers[i] = t[i];
		 }
		 int count = 0;
		 for(int i=0;i<j-1;i++)
		 {
			 for(int x=i+1;x<j;x++)
			 {
				 if(numbers[i]+k == numbers[x])
				 { 
					 count = count+1;
				 }
			 }
		 }
		 return count;
	    }
}
