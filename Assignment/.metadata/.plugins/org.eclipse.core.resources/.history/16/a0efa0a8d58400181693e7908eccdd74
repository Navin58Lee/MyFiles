package FinalDiscountedPrice;
public class Solution {
	static void finalPrice(int [] prices)
	{
		int len = prices.length;
		int temp = 0;
		int sum = 0;
		int min = 0;
	    int j;
		for(int i=0;i<len;i++)
		{
			for(j=i+1;j<len-1;j++)
			{
				for(int k=j+1;k<len;k++)
				{
					if(prices[j]>prices[k])
					{
						temp = prices[j];
						prices[j] = prices[k];
						prices[k] = temp;
					}
				}
			min = prices[j];
			}
			if(prices[i]<=min)
			{
				sum = sum+(min-prices[i]);
			}
			else
			{
				sum = sum+prices[i];
			}
		}
		System.out.println(sum);
	}
}
