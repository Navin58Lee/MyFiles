import java.util.*;
public class ConsecutiveCharacters {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		String str = in.next();
		String res = "";
		char y;
		int len  = str.length();
		for(int i=0;i<len;i++)
		{
			int j=i+1;
			{
				if(str.charAt(j)-str.charAt(i)==1)
				{
				  res = res+"*";
				}
				else
				{
					res = res+str.charAt(i);
				}
			}
		}
		System.out.println(res);
	}
}
